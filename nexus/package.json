{
  "name": "@proficientnowtech/nexus",
  "version": "1.0.0",
  "description": "ProficientNowTech Infrastructure Nexus - Your Infrastructure Command Center",
  "main": "dist/index.js",
  "bin": {
    "nexus": "dist/index.js"
  },
  "engines": {
    "node": ">=22.0.0"
  },
  "scripts": {
    "dev": "tsx src/index.ts",
    "build": "tsup src/index.ts --format cjs --target node22 --shims",
    "start": "node dist/index.js",
    "test": "jest",
    "test:watch": "jest --watch",
    "test:coverage": "jest --coverage",
    "lint": "eslint src --ext .ts,.tsx",
    "lint:fix": "eslint src --ext .ts,.tsx --fix",
    "format": "prettier --write \"src/**/*.{ts,tsx}\"",
    "type-check": "tsc --noEmit",
    "build:binary": "pkg dist/index.js --out-path dist/binaries",
    "release": "release-it"
  },
  "dependencies": {
    "@clack/prompts": "^0.7.0",
    "@clack/core": "^0.3.3",
    "better-auth": "^0.5.0",
    "chalk": "^4.1.2",
    "figlet": "^1.7.0",
    "gradient-string": "^2.0.2",
    "ink": "^5.0.1",
    "pastel": "^3.0.0",
    "react": "^18.2.0",
    "winston": "^3.11.0",
    "zod": "^3.22.4",
    "ajv": "^8.12.0",
    "ajv-formats": "^2.1.1",
    "uuid": "^9.0.0"
  },
  "devDependencies": {
    "@types/figlet": "^1.5.8",
    "@types/jest": "^29.5.8",
    "@types/node": "^22.0.0",
    "@types/react": "^18.2.37",
    "@types/uuid": "^9.0.0",
    "@typescript-eslint/eslint-plugin": "^6.11.0",
    "@typescript-eslint/parser": "^6.11.0",
    "eslint": "^8.53.0",
    "eslint-config-prettier": "^9.0.0",
    "eslint-plugin-react": "^7.33.2",
    "eslint-plugin-react-hooks": "^4.6.0",
    "jest": "^29.7.0",
    "pkg": "^5.8.1",
    "prettier": "^3.1.0",
    "release-it": "^16.2.1",
    "ts-jest": "^29.1.1",
    "tsup": "^7.2.0",
    "tsx": "^4.1.4",
    "typescript": "^5.2.2"
  },
  "keywords": [
    "infrastructure",
    "kubernetes",
    "tui",
    "devops",
    "automation",
    "proficientnowtech"
  ],
  "author": "ProficientNowTech <dev@proficientnowtech.com>",
  "license": "MIT",
  "repository": {
    "type": "git",
    "url": "https://github.com/pnow-devsupreme/pn-infra.git",
    "directory": "nexus"
  },
  "homepage": "https://docs.pnats.cloud",
  "bugs": {
    "url": "https://github.com/pnow-devsupreme/pn-infra/issues"
  },
  "pkg": {
    "targets": [
      "node22-linux-x64",
      "node22-macos-x64",
      "node22-win-x64"
    ],
    "outputPath": "dist/binaries"
  },
  "release-it": {
    "git": {
      "commitMessage": "chore(nexus): release v${version}",
      "tagName": "nexus-v${version}"
    },
    "npm": {
      "publish": true
    },
    "github": {
      "release": true,
      "releaseName": "Nexus v${version}"
    }
  }
}