packer {
  required_plugins {
    proxmox = {
      version = ">= 1.1.3"
      source  = "github.com/hashicorp/proxmox"
    }
  }
}

variable "role_name" {
  type        = string
  description = "Role name for this image build"
  default     = "{{ role_name }}"
}

variable "vm_id" {
  type        = number
  description = "VM ID for the template"
  default     = {{ vm_id }}
}

variable "vm_name" {
  type        = string
  description = "VM template name"
  default     = "{{ environment }}-{{ role_name }}-image"
}

variable "vm_cores" {
  type        = number
  description = "Number of CPU cores"
  default     = {{ resources.cpu }}
}

variable "vm_memory" {
  type        = number
  description = "Amount of memory in MB"
  default     = {{ resources.memory }}
}

variable "vm_disk_size" {
  type        = string
  description = "VM disk size"
  default     = "{{ resources.disk }}G"
}

# Proxmox connection variables (will be filled by environment config)
variable "proxmox_api_url" {
  type        = string
  description = "Proxmox API URL"
}

variable "proxmox_api_token_id" {
  type        = string
  description = "Proxmox API token ID"
}

variable "proxmox_api_token_secret" {
  type        = string
  description = "Proxmox API token secret"
  sensitive   = true
}

variable "proxmox_node" {
  type        = string
  description = "Target Proxmox node name"
}

variable "proxmox_storage_pool" {
  type        = string
  description = "Proxmox storage pool for VM disk"
}

variable "iso_storage_pool" {
  type        = string
  description = "Proxmox storage pool for ISO files"
}