# Packer variables for {{ role_name }} role
# Generated by bootstrap module for environment: {{ environment }}

# Proxmox connection settings
proxmox_api_url          = "{{ proxmox.url }}"
proxmox_api_token_id     = "{{ proxmox.api_token }}"
proxmox_api_token_secret = "{{ proxmox.api_secret }}"
proxmox_node             = "{{ proxmox.node }}"
proxmox_storage_pool     = "{{ proxmox.datastore }}"
iso_storage_pool         = "{{ proxmox.iso_storage }}"

# VM configuration for {{ role_name }}
vm_id     = {{ vm_id }}
vm_name   = "{{ environment }}-{{ role_name }}-image"
vm_cores  = {{ resources.cpu }}
vm_memory = {{ resources.memory }}
vm_disk_size = "{{ resources.disk }}G"

# Role metadata
role_name = "{{ role_name }}"