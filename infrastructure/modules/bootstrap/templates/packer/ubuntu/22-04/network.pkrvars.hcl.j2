// Network Settings
vm_network_device     = "{{ network.device | default('enp6s18') }}"
vm_network_card_model = "{{ network.card_model | default('virtio') }}"
vm_bridge_interface   = "{{ network.bridge | default('vmbr2') }}"
// DO NOT USE VLAN TAGS =>> WE ARE IMPLEMENTING THEM IN THE NEXT PHASE
// vm_vlan_tag          = "{{ network.vlan_tag | default('') }}"

// Network IP Settings
vm_ip_address = "{{ network.ip | default('192.168.100.100') }}"
vm_ip_netmask = {{ network.netmask | default(24) }}
vm_ip_gateway = "{{ network.gateway | default('192.168.100.1') }}"
vm_dns_list   = {{ network.dns | default(['8.8.8.8', '8.8.4.4']) | tojson }}
