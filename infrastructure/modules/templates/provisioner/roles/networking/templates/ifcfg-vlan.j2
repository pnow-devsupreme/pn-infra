# RedHat VLAN Interface Configuration - Generated by Ansible
# {{ ansible_managed }}
# VLAN: {{ item.name }} (ID: {{ item.id }})

DEVICE={{ ansible_default_ipv4.interface }}.{{ item.id }}
VLAN=yes
VLAN_ID={{ item.id }}
PHYSDEV={{ ansible_default_ipv4.interface }}
BOOTPROTO=static
ONBOOT=yes
IPADDR={{ item.gateway | ipaddr('network/prefix') | ipaddr('10') | ipaddr('address') }}
NETMASK={{ item.gateway | ipaddr('network/prefix') | ipaddr('netmask') }}
GATEWAY={{ item.gateway }}
DNS1=8.8.8.8
DNS2=1.1.1.1
ZONE=public
NM_CONTROLLED=yes
TYPE=Ethernet
