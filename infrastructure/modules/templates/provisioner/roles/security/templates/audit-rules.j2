# Audit rules for security monitoring
# Generated by Ansible security role
# {{ ansible_managed }}

# Clear any existing rules
-D

# Set buffer size and rate
-b 8192
-f 1

# Monitoring authentication events
{% if security.audit.monitor_auth | default(true) %}
-w /etc/passwd -p wa -k identity
-w /etc/group -p wa -k identity
-w /etc/gshadow -p wa -k identity
-w /etc/shadow -p wa -k identity
-w /etc/security/opasswd -p wa -k identity

# Authentication logs
-w /var/log/auth.log -p wa -k authentication
-w /var/log/secure -p wa -k authentication
{% endif %}

# Monitor login/logout events
{% if security.audit.monitor_login_logout_events | default(true) %}
-w /var/log/lastlog -p wa -k logins
-w /var/log/tallylog -p wa -k logins
-w /var/run/utmp -p wa -k session
-w /var/log/wtmp -p wa -k logins
-w /var/log/btmp -p wa -k logins
{% endif %}

# Monitor SSH configuration
{% if security.audit.monitor_ssh_config | default(true) %}
-w /etc/ssh/sshd_config -p wa -k ssh-config
-w /etc/ssh/ssh_config -p wa -k ssh-config
-e always -F arch=b64 -S bind -k ssh-bind
-e always -F arch=b32 -S bind -k ssh-bind
{% endif %}

# Monitor network configuration changes
{% if security.audit.monitor_network_config | default(true) %}
-a exit,always -F arch=b32 -S sethostname -S setdomainname -k network-config
-a exit,always -F arch=b64 -S sethostname -S setdomainname -k network-config
-w /etc/issue -p wa -k network-config
-w /etc/issue.net -p wa -k network-config
-w /etc/hosts -p wa -k network-config
-w /etc/network/ -p wa -k network-config
-w /etc/netplan/ -p wa -k network-config
{% endif %}

# Monitor system calls
{% if security.audit.monitor_sys_calls | default(true) %}
# Process execution
-a exit,always -F arch=b64 -S execve -k process-execution
-a exit,always -F arch=b32 -S execve -k process-execution

# File access (high volume, use carefully)
{% if security.audit.monitor_file_access | default(false) %}
-a exit,always -F arch=b64 -S openat -S open -k file-access
-a exit,always -F arch=b32 -S openat -S open -k file-access
{% endif %}

# Privilege escalation
-a exit,always -F arch=b64 -S setuid -S setgid -S setreuid -S setregid -k privilege-escalation
-a exit,always -F arch=b32 -S setuid -S setgid -S setreuid -S setregid -k privilege-escalation

# Time changes
-a exit,always -F arch=b64 -S adjtimex -S settimeofday -k time-change
-a exit,always -F arch=b32 -S adjtimex -S settimeofday -k time-change
-w /etc/localtime -p wa -k time-change
{% endif %}

# Monitor critical system files
-w /bin/su -p x -k privileged-commands
-w /usr/bin/sudo -p x -k privileged-commands
-w /usr/bin/passwd -p x -k privileged-commands
-w /usr/bin/chsh -p x -k privileged-commands
-w /usr/bin/chfn -p x -k privileged-commands

# System startup scripts
-w /etc/init.d/ -p wa -k init-scripts
-w /etc/systemd/ -p wa -k systemd-config

# Kernel modules
-w /sbin/insmod -p x -k modules
-w /sbin/rmmod -p x -k modules
-w /sbin/modprobe -p x -k modules
-a exit,always -F arch=b64 -S init_module -S delete_module -k modules

{% if security.audit.lock_config | default(true) %}
# Lock the audit configuration
-e 2
{% endif %}