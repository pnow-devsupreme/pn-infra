# User Profile - Generated by Ansible
# {{ ansible_managed }}
# User: {{ item.username }}

# Set PATH
if [ -d "$HOME/bin" ] ; then
    PATH="$HOME/bin:$PATH"
fi

if [ -d "$HOME/.local/bin" ] ; then
    PATH="$HOME/.local/bin:$PATH"
fi

export PATH

# Basic environment
export USER="{{ item.username }}"
export HOME="/home/{{ item.username }}"
export SHELL="{{ item.shell | default('/bin/bash') }}"

# Locale
export LANG="{{ base_setup.locale | default('en_US') }}.UTF-8"

# Editor
export EDITOR="vim"

# History
export HISTSIZE=1000
export HISTFILESIZE=2000

# Secure umask
umask 0027

# Basic aliases
alias ll='ls -alF'
alias la='ls -A'
alias l='ls -CF'

# Safety aliases
alias rm='rm -i'
alias cp='cp -i'
alias mv='mv -i'

# Simple prompt
PS1='{{ item.username }}@\h:\w\$ '
export PS1

# Source bashrc if it exists
if [ -n "$BASH_VERSION" ]; then
    if [ -f "$HOME/.bashrc" ]; then
        . "$HOME/.bashrc"
    fi
fi
